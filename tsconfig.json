{
    "compilerOptions": {
        "alwaysStrict": true,
        "declaration": true,
        "declarationMap": false,
        "forceConsistentCasingInFileNames": true,
        "module": "CommonJS",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "target": "ES2018"
    },
    "exclude": ["node_modules", ".git", "dist"]
}
